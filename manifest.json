{
    "name": "Songza Control",
    "version": "0.0.1",
    "manifest_version": 2,
    "browser_action": {
        "default_title": "Songza Control",
        "default_popup": "popup.html",
		"default_icon": "icon.png"
    },
    "permissions" : [
    	"tabs",
    	"*://songza.com/*", // cross-origin permission
    	"*://ajax.googleapis.com/*"
    ],
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	"content_scripts": [
		{
			"matches": ["*://songza.com/*"],
			"js": ["jquery-2.1.3.min.js", "content.js"]
		}
	]
}